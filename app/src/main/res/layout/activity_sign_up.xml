<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:background="#F0FFF0"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="119dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/welcome"
        android:layout_marginTop="20dp"/>
    <EditText
        android:id="@+id/sign_up_layout_edtEmail"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ffff"
        android:textColor="@color/black"
        android:hint="Enter Email"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:drawableRight="@drawable/ic_baseline_email_24"/>

    <EditText
        android:id="@+id/sign_up_layout_edtUsername"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ffff"
        android:textColor="@color/black"
        android:hint="Enter Username"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:drawableRight="@drawable/ic_baseline_account_circle_24"/>


    <EditText
        android:id="@+id/sign_up_layout_edtPass"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ffff"
        android:textColor="@color/black"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:drawableRight="@drawable/ic_baseline_lock_24"
        />
    <EditText
        android:id="@+id/sign_up_layout_edtConfirmPass"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ffff"
        android:textColor="@color/black"
        android:hint="Confirm Password"
        android:textSize="18sp"
        android:layout_margin="10dp"
       android:padding="10dp"
        android:inputType="textPassword"
        android:drawableRight="@drawable/ic_baseline_check_24"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:textSize="22sp"
        android:background="#FFFF00"
        android:id="@+id/sign_up_layout_btnSignup"/>

    <Button

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="login"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:textSize="22sp"
        android:background="#FFFF00"
        android:id="@+id/sign_up_layout_btnLogin"
        android:layout_marginBottom="120dp"/>


</LinearLayout>